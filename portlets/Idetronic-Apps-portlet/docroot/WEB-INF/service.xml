<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.idetronic.tazkirah">
	<author>Mazlan Mat</author>
	<namespace>tazkirah</namespace>

	<entity name="Tazkirah" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="tazkirahId" type="long" primary="true"/>

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="title" type="String" />
		<column name="content" type="String" />
		<column name="category" type="String" />
		<column name="status" type="int" />
	
		<!-- Order -->
		
	

		<!-- Finder methods -->

		<finder name="Category" return-type="Collection">
			<finder-column name="category" />
		</finder>
	</entity>
</service-builder>