<?xml version="1.0"?>

<model-hints>
	<hint-collection name="DESCRIPTION-TEXTAREA">
		<hint name="display-height">105</hint>
		<hint name="display-width">500</hint>
		<hint name="max-length">4000</hint>
	</hint-collection>
	<hint-collection name="CLOB">
		<hint name="max-length">2000000</hint>
		<hint name="display-width">500</hint>
		<hint name="display-height">105</hint>
	</hint-collection>
	<hint-collection name="TEXT-LONG">
		<hint name="display-width">200</hint>
	</hint-collection>
	<model name="com.idetronic.subur.model.Author">
		<field name="authorId" type="long" />
		<field name="groupId" type="long" />
		<field name="idType" type="int" />
		<field name="remoteId" type="String" />
		<field name="firstName" type="String" />
		<field name="lastName" type="String" />
		<field name="userId" type="int" />
		<field name="metadata" type="String" />
	</model>
	<model name="com.idetronic.subur.model.Division">
		<field name="divisionId" type="long" />
		<field name="parentId" type="long" />
		<field name="divisionName" type="String" />
		<field name="depositable" type="boolean" />
	</model>
	<model name="com.idetronic.subur.model.FileEntryType">
		<field name="typeId" type="long" />
		<field name="typeName" type="String" />
	</model>
	<model name="com.idetronic.subur.model.ItemAuthor">
		<field name="itemId" type="long" />
		<field name="authorId" type="long" />
	</model>
	<model name="com.idetronic.subur.model.ItemDivision">
		<field name="itemId" type="long" />
		<field name="divisionId" type="long" />
	</model>
	<model name="com.idetronic.subur.model.ItemFileEntry">
		<field name="itemId" type="long" />
		<field name="fileEntryId" type="long" />
