<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.0+</version>
	</compatibility>
	<theme id="idetronic-modern" name="Idetronic Modern Theme">
		<template-extension>vm</template-extension>
		<settings>
			<setting configurable="true" key="show-left-navigation" type="checkbox" value="false" />
		</settings>
		<color-scheme id="01" name="Purple">
			<css-class>purple</css-class>
			<color-scheme-images-path>${images-path}/color_schemes/${css-class}</color-scheme-images-path>
		</color-scheme>
		<color-scheme id="02" name="Green">
			<css-class>green</css-class>
			<color-scheme-images-path>${images-path}/color_schemes/${css-class}</color-scheme-images-path>
		</color-scheme>
		<color-scheme id="03" name="Black">
			<css-class>black</css-class>
			<color-scheme-images-path>${images-path}/color_schemes/${css-class}</color-scheme-images-path>
		</color-scheme>
		
	</theme>
</look-and-feel>